---
import skillsData from "../../data/skills.json";
const { skills } = skillsData;
---

<section id="skills">
  <div class="container">
    <h2>Stack</h2>
    <div class="skills-marquee">
      <div class="skills-track">
        {skills.map((skill) => <span class="skill-pill">{skill}</span>)}
        {skills.map((skill) => <span class="skill-pill">{skill}</span>)}
      </div>
    </div>
  </div>
</section>

<style>
  .skills-marquee {
    overflow: hidden;
    width: 100%;
    margin-bottom: 1.5rem;
  }
  .skills-track {
    display: flex;
    width: max-content;
    animation: scroll 30s linear infinite;
    gap: 2rem;
  }
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
  .skill-pill {
    flex: 0 0 auto;
    background: rgba(30, 58, 95, 0.2);
    padding: 0.5rem 1rem;
    border-radius: var(--radius);
    font-size: 0.9rem;
    white-space: nowrap;
  }
</style>
