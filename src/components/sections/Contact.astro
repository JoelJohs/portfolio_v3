<script>
  // Declaraciones de tipos para funciones globales
  declare global {
    interface Window {
      trackAchieve: (achievementId: string) => void;
    }
  }

  document.getElementById("copyBtn")?.addEventListener("click", async () => {
    try {
      await navigator.clipboard.writeText("jojohersa21@gmail.com");

      // Desbloquear logro de copiar email
      if (window.trackAchieve) {
        window.trackAchieve("copiarEmail");
      }

      // Crear un elemento de notificaci√≥n temporal
      const notification = document.createElement("div");
      notification.textContent = "¬°Correo copiado! ‚úÖ";
      notification.style.cssText = `
        position: fixed;
        top: 20px;
        right: 20px;
        background: var(--cristal);
        color: var(--abismo);
        padding: 0.8rem 1.2rem;
        border-radius: var(--radius);
        font-weight: 600;
        font-size: 0.9rem;
        box-shadow: 0 6px 20px rgba(100, 255, 218, 0.3);
        z-index: 1000;
        transform: translateX(100%);
        transition: transform 0.3s ease;
      `;

      document.body.appendChild(notification);

      // Animar la entrada
      setTimeout(() => {
        notification.style.transform = "translateX(0)";
      }, 100);

      // Remover despu√©s de 3 segundos
      setTimeout(() => {
        notification.style.transform = "translateX(100%)";
        setTimeout(() => {
          document.body.removeChild(notification);
        }, 300);
      }, 3000);
    } catch (err) {
      // Fallback para navegadores m√°s antiguos
      alert("¬°Correo copiado!");
    }
  });
</script>
