<script>
  const logrosData = [
    {
      id: "copiarEmail",
      name: "Copia expr√©s",
      hint: "¬øD√≥nde guardo mi correo?",
    },
    {
      id: "visitoProyectos",
      name: "Curioso nato",
      hint: "Mira todos los tipos de proyectos.",
    },
    {
      id: "modoOscuro",
      name: "Secreto oscuro",
      hint: "Arriba, arriba, abajo, abajo‚Ä¶",
    },
    {
      id: "tripleClick",
      name: "Click fren√©tico",
      hint: "El logo no es un bot√≥n‚Ä¶ o s√≠.",
    },
    { id: "reveloLinkedIn", name: "Iniciales m√°gicas", hint: "J L H" },
    {
      id: "reprodujoMusica",
      name: "DJ de lo retro",
      hint: "Escucha el ambiente.",
    },
    { id: "modoClaro", name: "Luz al final", hint: "¬øVolver a la normalidad?" },
    {
      id: "datoCurioso",
      name: "Esperador zen",
      hint: "Qu√©date quieto un minuto.",
    },
  ];

  const LS_ACHIEVEMENTS = "achievements";

  function getAchievements() {
    return new Set(JSON.parse(localStorage.getItem(LS_ACHIEVEMENTS) || "[]"));
  }

  function updateAchievements() {
    const achievements = getAchievements();
    const countElement = document.getElementById("logrosCount");
    if (countElement) {
      countElement.textContent = achievements.size.toString();
    }
  }

  function renderLogros() {
    const achievements = getAchievements();
    const list = document.getElementById("logrosList");
    if (!list) return;

    list.innerHTML = "";
    logrosData.forEach((logro) => {
      const done = achievements.has(logro.id);
      const div = document.createElement("div");
      div.className = "logro-item" + (done ? "" : " lock");
      div.innerHTML = `
        ${done ? "‚úÖ" : "üîí"} <strong>${logro.name}</strong><br>
        <small>${done ? "¬°Conseguido!" : "Pista: " + logro.hint}</small>
      `;
      list.appendChild(div);
    });
  }

  function openModal() {
    renderLogros();
    const modal = document.getElementById("logrosModal");
    if (modal) {
      modal.classList.add("show");
    }
  }

  function closeModal() {
    const modal = document.getElementById("logrosModal");
    if (modal) {
      modal.classList.remove("show");
    }
  }

  // Event listeners
  document.addEventListener("DOMContentLoaded", () => {
    const logrosBtn = document.getElementById("logrosBtn");
    const logrosModal = document.getElementById("logrosModal");

    if (logrosBtn) {
      logrosBtn.addEventListener("click", openModal);
    }

    if (logrosModal) {
      logrosModal.addEventListener("click", (e) => {
        if (e.target === logrosModal) {
          closeModal();
        }
      });
    }

    // Actualizar contador inicial
    updateAchievements();
    renderLogros();
  });

  // Escuchar eventos de logros
  window.addEventListener("achievementUnlocked", () => {
    updateAchievements();
    renderLogros();
  });

  // Hacer funciones globales
  window.openModal = openModal;
  window.closeModal = closeModal;
</script>
